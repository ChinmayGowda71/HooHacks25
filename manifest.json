{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension built with Next.js, Tailwind CSS, and TypeScript.",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}